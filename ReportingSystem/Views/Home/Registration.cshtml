@{
    ViewData["Title"] = "Реєстрація";    
    Layout = "_LayoutAuthorize";
}

<script src="https://cdn.jsdelivr.net/npm/vue@2.7.8/dist/vue.js"></script>
<script src="https://unpkg.com/axios@1.1.2/dist/axios.min.js"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.4.0/jspdf.umd.min.js"></script>

<div mt-3 class="text-center">
    <h2 class="display-4">Реєстрація</h2>
</div>

<div id="Registration" class="container" >
    <div class="panel panel-default" >
        <div class="panel-heading"></div>
        <div class="panel-body">
            <form>
                <div class="row align-items-center">
                    <div class="col-sm-6">
                       
                        <div class="form-group">
                            <label class="control-label">Ім'я</label>
                            <input type="input" class="form-control" v-model="firstName" />
                        </div>
                        <div class="form-group">
                            <label class="control-label">Прізвище</label>
                            <input type="input" class="form-control" v-model="secondName" />
                        </div>
                        <div class="form-group">
                            <label class="control-label">По-батькові</label>
                            <input type="input" class="form-control" v-model="thirdName" />
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="control-label">Email</label>
                                <input type="input" class="form-control" v-model="email" />
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="control-label">Телефон</label>
                                <input type="input" class="form-control" v-model="phone" />
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="control-label">Пароль</label>
                                <input type="input" class="form-control" v-model="password" />
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <button type="button" class="button mt-3" v-on:click="createCustomer()">Зареєструватись</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

</div>

<style>
    .button {
        /* Стилі для кнопок */
        padding: 5px 10px;
        background-color: #007bff;
        color: white;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

</style>
<script src="~/js/Registration.js" asp-append-version="true"></script>