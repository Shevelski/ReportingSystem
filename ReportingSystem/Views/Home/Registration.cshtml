@{
    ViewData["Title"] = "Реєстрація";    
    Layout = "_LayoutAuthorize";
}

<div mt-3 class="text-center">
    <h2 class="display-4">Реєстрація</h2>
</div>

<div class="container" id="Registration">
    <div class="panel panel-default" >
        <div class="panel-heading"></div>
        <div class="panel-body">
            <form>
                <div class="row align-items-center">
                    <div class="col-sm-6">
                       
                        <div class="form-group">
                            <label class="control-label">Ім'я</label>
                            <input type="text" class="form-control" v-model="personalInfo.firstName" />
                        </div>
                        <div class="form-group">
                            <label class="control-label">Прізвище</label>
                            <input type="text" class="form-control" v-model="personalInfo.secondName" />
                        </div>
                        <div class="form-group">
                            <label class="control-label">По-батькові</label>
                            <input type="text" class="form-control" v-model="personalInfo.thirdName" />
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="control-label">Email</label>
                                <input type="text" class="form-control" v-model="personalInfo.emailWork" />
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="control-label">Телефон</label>
                                <input type="text" class="form-control" v-bind:disabled="true" v-model="personalInfo.phoneWork" />
                            </div>
                        </div>
                        <div class="col-sm-6">
                        <div class="form-group">
                            <label class="control-label">Пароль</label>
                            <input type="text" class="form-control" v-bind:disabled="mode=='standart'" v-model="personalInfo.password" />
                        </div>
                       </div>
                           <button class="button mt-3" >
                                Зареєструватись
                            </button>
                        
                    </div>
                </div>
            </form>
        </div>
    </div>

</div>

<style>
    .button {
        /* Стилі для кнопок */
        padding: 5px 10px;
        background-color: #007bff;
        color: white;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

</style>