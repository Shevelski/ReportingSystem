@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = "Вхід";    
    Layout = "_LayoutAuthorize";
}
@* <p>Cookie Value: @ViewBag.CookieValue</p> *@

<script src="https://cdn.jsdelivr.net/npm/vue@2.7.8/dist/vue.js"></script>
<script src="https://unpkg.com/axios@1.1.2/dist/axios.min.js"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.4.0/jspdf.umd.min.js"></script>

<div id="Authorize">
    @* <input type="hidden" id="statusName" value="@Model?.StatusName" /> *@
    <div class="el1 bm-3" v-if="mode == 0">
        <label class="label">@Localizer["WriteEmail"]</label>
    </div>
    <div class="el1 bm-3" v-else>
        <label class="label">{{ status.name }}</label>
    </div>

    <div class="el1 bm-3" v-if="mode == 0">
        <label class="label">Email</label>
        <input class="input" v-model="email" />
    </div>

    <div class="el1 bm-3" v-if="mode == 2">
        <button type="button" class="button yes-button" v-on:click="CheckEmail()">@Localizer["Yes"]</button>
        <button type="button" class="button no-button" v-on:click="mode = 0">@Localizer["No"]</button>
    </div>

    <div class="el1 bm-3" v-if="mode == 0">
        <button type="button" class="button" v-on:click="CheckEmail()">@Localizer["CheckEmail"]</button>
    </div>


    <form method="get" class="el1 bm-3" asp-action="CheckPassword" asp-controller="Home">
        <div class="el1 bm-3" v-if="mode == 1 || mode == 4">
            <label class="label">@Localizer["Password"]</label>
            <input class="input" name="password" v-model="password" />
        </div>
        <div class="el1 bm-3" v-if="mode == 1 || mode == 4">
            <button type="submit" class="button">@Localizer["CheckPass"]</button>
        </div>
        <input type="hidden" name="email" v-model="email" />
    </form>

</div>

<style>

    .label {
        /* Стилі для лейблів */
        display: block;
        margin-bottom: 5px;
    }

    .input {
        /* Стилі для вводу */
        padding: 5px;
        width: 100%;
        border: 1px solid #ccc;
        border-radius: 4px;
    }

    .button {
        /* Стилі для кнопок */
        padding: 5px 10px;
        background-color: #007bff;
        color: white;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

    .yes-button {
        /* Стилі для кнопки "Так" */
        background-color: #28a745;
        margin-right: 5px;
    }

    .no-button {
        /* Стилі для кнопки "Ні" */
        background-color: #dc3545;
    }
</style>

@*---------------------------------------------------------------------------------------------------------------------*@
<script src="~/js/Authorize.js" asp-append-version="true"></script>
