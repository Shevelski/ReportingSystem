@using ReportingSystem.Properties;

@{
    ViewData["Title"] = "Компанії";
}

<script src="https://cdn.jsdelivr.net/npm/vue@2.7.8/dist/vue.js"></script>
<script src="https://unpkg.com/axios@1.1.2/dist/axios.min.js"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.4.0/jspdf.umd.min.js"></script>
<link rel="stylesheet" href="~/css/Companies.css" asp-append-version="true" />
@*---------------------------------------------------------------------------------------------------------------------*@

<div class="container textcolor" id="Companies">
    <div class="accordion" id="accordionExample" v-if="companies.length !== 1">
        @*---------------------------------------------------------------------------------------------------------------------*@
        @* Модальне вікно*@
        <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="staticBackdropLabel">{{modalTitle}}:</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Закрити"></button>
                    </div>
                    <div class="modal-body">

                        @*Для редагування компанії*@
                        <div v-if="modalType === 2">
                            <div class="form-group">
                                <label class="form-label">Назва</label>
                                <input class="form-control" type="text" v-model="editCompanyName" />
                                <label class="form-label">Адреса</label>
                                <input class="form-control" type="text" v-model="editCompanyAddress" />
                                <label class="form-label">Діяльність</label>
                                <input class="form-control" type="text" v-model="editCompanyActions" />
                                <label class="form-label">Телефон</label>
                                <input class="form-control" type="text" v-model="editCompanyPhone" />
                                <label class="form-label">Пошта</label>
                                <input class="form-control" type="text" v-model="editCompanyEmail" />
                            </div>
                        </div>
                        @*Для створення компанії*@
                        <div v-if="modalType === 1">
                            <div class="mb-3 form-check">
                                <input type="checkbox" class="form-check-input" v-model="useOpenDataBot" id="useOpenDataBot">
                                <label class="form-check-label" for="useOpenDataBot">Створити з допомогою OpenDataBot</label>
                            </div>
                            <div class="form-group" v-if="useOpenDataBot == false">
                                <label class="form-label">Назва</label>
                                <input class="form-control" placeholder="Введіть назву" type="text" v-model="editCompanyName" />
                                <label class="form-label">Адреса</label>
                                <input class="form-control" placeholder="Введіть адресу" type="text" v-model="editCompanyAddress" />
                                <label class="form-label">Діяльність</label>
                                <input class="form-control" placeholder="Введіть назву діяльності" type="text" v-model="editCompanyActions" />
                                <label class="form-label">Телефон</label>
                                <input class="form-control" placeholder="Введіть телефон" type="text" v-model="editCompanyPhone" />
                                <label class="form-label">Пошта</label>
                                <input class="form-control" placeholder="Введіть e-mail" type="text" v-model="editCompanyEmail" />
                            </div>
                            <div v-else>
                                <label class="form-label">ЄДРПУ</label>
                                <input class="form-control" placeholder="Введіть ЄДРПУ" type="text" v-model="editEDRPU" />
                            </div>
                        </div>

                        <p :class="{ 'red-text': modalCompanyActive }">{{ modalOperation }}</p>

                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Закрити</button>
                        
                        <button type="button" class="btn btn-primary" data-bs-dismiss="modal" v-if="modalType === 1 && useOpenDataBot == false " v-on:click="confirmCreateCompany()">Підтвердити</button>
                        <button type="button" class="btn btn-primary" v-if="modalType === 1 && useOpenDataBot == true " v-on:click="checkCompany()">Перевірити</button>

                        <button type="button" class="btn btn-primary" data-bs-dismiss="modal" v-if="modalType === 2" v-on:click="confirmEditCompany()">Підтвердити</button>
                        <button type="button" class="btn btn-primary" data-bs-dismiss="modal" v-if="modalType === 3" v-on:click="confirmArchiveCompany()">Підтвердити</button>
                        <button type="button" class="btn btn-primary" data-bs-dismiss="modal" v-if="modalType === 4" v-on:click="confirmDeleteCompany()">Підтвердити</button>


                    </div>
                </div>
            </div>
        </div>
        @*---------------------------------------------------------------------------------------------------------------------*@
        
        <div style="display: flex; align-items: center;" v-if="rol === 'Developer' || rol === 'DevAdministrator'">
            <select class="form-select mb-3" aria-label="Default select example" v-on:change="getSelectedCustomer($event)" v-model="selectedCustomerId">
                <option v-for="customer in customers" :value="customer.id">{{ customer.firstName }} {{ customer.secondName }} {{ customer.thirdName }} {{ customer.email }}</option>
            </select>

            @*<div class="form-check mb-3" style="margin-left: 20px;">
                <input class="form-check-input" type="checkbox" id="flexCheckIndeterminateCu" v-on:change="SavePermanentCustomer()" v-model="saveCustomer">
                <label class="form-check-label" for="flexCheckIndeterminateCu">
                    Запам'ятати замовника
                </label>
            </div>*@
        </div>
        
        <div class="row mb-3">
            <div class="col">
                <div class="btn-group d-flex justify-content-between">
                    <button type="button" class="btn btn-secondary col-sm-6 ms-2" data-bs-toggle="modal" data-bs-target="#staticBackdrop" v-on:click="toggleModal(1, -1)">Додати компанію</button>
                </div>
            </div>
        </div>

        <div class="mb-3">
            <!-- Поле введення для пошуку -->
            <input v-model="searchQuery" type="text" class="form-control" placeholder="Пошук...">
        </div>

        <div class="mb-3 form-check">
            <input type="checkbox" class="form-check-input" v-model="showArchive" id="showArchive" v-on:change="closeAllAccordions()">
            <label class="form-check-label" for="showArchive">Архівні</label>
        </div>
        @*---------------------------------------------------------------------------------------------------------------------*@
        <div class="container" v-if="countFilteredCompanies > 10">
            <div class="row">
                <div class="btn-toolbar justify-content-between" role="toolbar" aria-label="Toolbar with button groups">
                    <div class="btn-group mb-3 mt-3 d-flex justify-content-start">
                        <button type="button" class="btn btn-default" v-bind:class="{active: itemsPerPage == 10}" v-on:click="setItemsPerPage(10)">10</button>
                        <button type="button" v-if="countFilteredCompanies > 10" class="btn btn-default textcolor" v-bind:class="{active: itemsPerPage == 15}" v-on:click="setItemsPerPage(15)">15</button>
                        <button type="button" v-if="countFilteredCompanies > 15"  class="btn btn-default" v-bind:class="{active: itemsPerPage == 20}" v-on:click="setItemsPerPage(20)">20</button>
                    </div>
                    <div class="btn-group mb-3 mt-3 d-flex justify-content-end">
                        <button type="button" class="btn btn-light" v-on:click="prevBatch()" data-bs-toggle="tooltip" data-bs-placement="top" title="Попередні" :style="{ visibility: pageCur !== 1 ? 'visible' : 'hidden' }"><<</button>
                        <button type="button" class="btn btn-light" v-on:click="firstBatch()" data-bs-toggle="tooltip" data-bs-placement="top" title="На початок">{{pageCur}}</button>
                        <button type="button" class="btn btn-light" v-on:click="nextBatch()" data-bs-toggle="tooltip" data-bs-placement="top" title="Наступні" :style="{ visibility: pageCur < pageCount ? 'visible' : 'hidden' }">>></button>
                    </div>
                </div>
            </div>
        </div>
        @*---------------------------------------------------------------------------------------------------------------------*@
        <div style="margin-top: 1em;"></div>
        <div v-for="(company, index) in filteredCompanies" :key="index" class="accordion-item">
            <h2 class="accordion-header" :id="'heading' + index">
                <button class="accordion-button" type="button" :data-bs-toggle="'collapse'" :data-bs-target="'#collapse' + index" :aria-controls="'collapse' + index">
                    {{ company.name }}
                </button>
            </h2>
            <div :id="'collapse' + index" class="accordion-collapse collapse" :aria-labelledby="'heading' + index" data-bs-parent="#Companies">
                <div class="accordion-body">
                    <table class="table">
                        <tbody>
                            <tr>
                                <td><strong>Назва</strong></td>
                                <td>{{company.name}}</td>
                            </tr>
                            <tr>
                                <td><strong>Адреса</strong></td>
                                <td>{{company.address}}</td>
                            </tr>
                            <tr>
                                <td><strong>Код</strong></td>
                                <td>{{company.code}}</td>
                            </tr>
                            <tr>
                                <td><strong>Діяльність</strong></td>
                                <td>{{company.actions}}</td>
                            </tr>
                            <tr>
                                <td><strong>Статус</strong></td>
                                <td>{{(company.status.companyStatusName)}}</td>
                            </tr>
                            <tr>
                                <td><strong>Телефон</strong></td>
                                <td>{{(company.phone)}}</td>
                            </tr> 
                            <tr>
                                <td><strong>E-mail</strong></td>
                                <td>{{(company.email)}}</td>
                            </tr>
                            <tr>
                                <td><strong>Статутний капітал</strong></td>
                                <td>{{(company.statutCapital)}}</td>
                            </tr>
                            <tr>
                                <td><strong>Дата реєстрації</strong></td>
                                <td>{{showFormatDate(company.registrationDate)}}</td>
                            </tr>
                            <tr>
                                <td><strong>Керівник</strong></td>
                                <td>{{(company.chief.firstName}} {{company.chief.secondName}} {{company.chief.thirdName)}}</td>
                            </tr>
                            <tr>
                                <td colspan="2" class="text-left">
                                    <button type="button" class="btn btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#staticBackdrop" title="Редагувати компанію" v-on:click="toggleModal(2,index)">Редагувати</button>&nbsp;
                                    <button type="button" v-if="company.status.companyStatusType !== 3" class="btn btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#staticBackdrop" title="Архівувати компанію" v-on:click="toggleModal(3,index)">Архівувати</button>
                                    <button type="button" v-if="company.status.companyStatusType === 3" class="btn btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#staticBackdrop" title="Архівувати компанію" v-on:click="toggleModal(4,index)">Видалити</button>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div v-else>
        <div style="margin-top: 50px; margin-bottom: 50px;">
            <div class="text-center">
                <div class="spinner-border" style="width: 3rem; height: 3rem;" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
            </div>
        </div>
    </div>
</div>
@*---------------------------------------------------------------------------------------------------------------------*@
<script src="~/js/Companies.js" asp-append-version="true"></script>

