        <div style="margin-top: 1em;"></div>
        <div v-for="(step, index) in filteredSteps" :key="index" class="accordion-item">
            <h2 class="accordion-header" :id="'heading' + index">
                <button class="accordion-button" v-on:click="setFilteredIndex(index)" type="button" :data-bs-toggle="'collapse'" :data-bs-target="'#collapse' + index" :aria-controls="'collapse' + index">
                    {{step.name}}
                </button>
            </h2>
            <div :id="'collapse' + index" class="accordion-collapse collapse" :aria-labelledby="'heading' + index" data-bs-parent="#ProjectsSteps">
                <div class="accordion-body">
                    <table class="table table-black">
                        <tbody>
                             <tr>
                                <td><strong>Назва:</strong></td>
                                <td>{{step.name}}</td>
                            </tr>
                             <tr>
                                <td><strong>Опис:</strong></td>
                                <td>{{step.description}}</td>
                            </tr>
                             <tr>
                                <td><strong>Дата початку:</strong></td>
                                <td>{{ showFormatDate(step.startDate) }}</td>
                            </tr>
                             <tr>
                                <td><strong>Дата кінця:</strong></td>
                                <td>{{showFormatDate(step.endDate)}}</td>
                            </tr>
                             <tr>
                                <td><strong>Дата кінця планова:</strong></td>
                                <td>{{showFormatDate(step.planDate)}}</td>
                            </tr>
                             <tr>
                                <td><strong>Посади:</strong></td>
                                <td>
                                    <table class="table table-black">
                                        <tbody>
                                            <tr v-for="pos in step.empPositions">
                                                <td>{{pos.namePosition}}</td>
                                                <td>
                                                    <table class="table table-black">
                                                        <tbody>
                                                            <tr v-for="emp1 in pos.employees" v-if="emp1">
                                                                <td>{{ emp1.firstName }} {{ emp1.secondName }} {{ emp1.thirdName }}</td>
                                                            </tr>
                                                        </tbody>
                                                    </table>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </td>
                            </tr>
                             <tr>
                                <td><strong>Статус:</strong></td>
                                <td>
                                    {{step.status.name}}
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
       
    </div>

    <div v-else>
        <div style="margin-top: 50px; margin-bottom: 50px;">
            <div class="text-center">
                <div class="spinner-border" style="width: 3rem; height: 3rem;" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
            </div>
        </div>
    </div>
</div>


<script src="~/js/ProjectsSteps.js" asp-append-version="true"></script>