        <div style="margin-top: 1em;"></div>
        <div v-for="(project, index) in filteredProjects" :key="index" class="accordion-item">
            <h2 class="accordion-header" :id="'heading' + index">
                <button class="accordion-button" type="button" :data-bs-toggle="'collapse'" :data-bs-target="'#collapse' + index" :aria-controls="'collapse' + index">
                    {{project.name}}
                </button>
            </h2>
            <div :id="'collapse' + index" class="accordion-collapse collapse" :aria-labelledby="'heading' + index" data-bs-parent="#Projects">
                <div class="accordion-body">
                    <table class="table">
                        <tbody>
                            <tr>
                                <td><strong>Назва</strong></td>
                                <td>{{project.name}}</td>
                            </tr>
                            <tr>
                                <td><strong>Опис</strong></td>
                                <td>{{project.description}}</td>
                            </tr>
                            <tr>
                                <td><strong>Статус</strong></td>
                                <td>{{project.status.name}}</td>
                            </tr>
                            <tr>
                                <td><strong>Дата початку</strong></td>
                                <td>{{project.endDate}}</td>
                            </tr>
                            <tr>
                                <td><strong>Дата закінчення</strong></td>
                                <td>{{project.endDate}}</td>
                            </tr>
                            <tr>
                                <td><strong>Планована дата закінчення</strong></td>
                                <td>{{project.planDate}}</td>
                            </tr>
                            <tr>
                                <td><strong>Керівник</strong></td>
                                <td>{{project.head.firstName}} {{project.head.secondName}} {{project.head.thirdName}}</td>
                            </tr>
                            <tr>
                                <td><strong>Посади</strong></td>
                                <td>
                                    <ul>
                                        <li v-for="position in project.positions">{{ position.namePosition }}</li>
                                    </ul>
                                </td>
                            </tr>
                            <tr>
                                <td><strong>Учасники</strong></td>
                                <td>
                                    <ul>
                                        <li v-for="member in project.members">
                                            {{ member.firstName }} {{ member.secondName }} {{ member.thirdName }}
                                        </li>
                                    </ul>
                                </td>
                            </tr>
                            <tr>
                                <td colspan="2" class="text-left">
                                    <button type="button" class="btn btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#staticBackdrop" title="Редагувати проект" v-on:click="toggleModal(2,index)">Редагувати</button>&nbsp;
                                    <button type="button" v-if="project.status.type !== 5" class="btn btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#staticBackdrop" title="Архівувати проект" v-on:click="toggleModal(3,index)">Архівувати</button>
                                    <button type="button" v-if="project.status.type === 5" class="btn btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#staticBackdrop" title="Архівувати проект" v-on:click="toggleModal(4,index)">Видалити</button>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div v-else>
        <div style="margin-top: 50px; margin-bottom: 50px;">
            <div class="text-center">
                <div class="spinner-border" style="width: 3rem; height: 3rem;" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
            </div>
        </div>
    </div>
</div>
