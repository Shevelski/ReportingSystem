<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ReportingSystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    @*<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />*@
    <link rel="stylesheet" href="~/ReportingSystem.styles.css" asp-append-version="true" />
</head>

@{
    var path = Context.Request.Path;
}

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-custom">
            <div class="container-fluid">
                <a class="navbar-brand main-name @(path == "/" ? "active": "")" asp-area="" asp-controller="EUProjectManager" asp-action="Index">Звітна система</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNavDropdown">
                        <ul class="navbar-nav flex-grow-1 justify-content-end custom-header">
                            <li class="nav-item">
                                <a class="nav-link @(path == "/EUProjectManager" ? "active": "")" asp-area="" asp-controller="EUProjectManager" asp-action="Index">Сповіщення</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(path == "/EUProjectManager/Projects" ? "active": "")" asp-area="" asp-controller="EUProjectManager" asp-action="Projects">Проекти</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(path == "/EUProjectManager/Steps" ? "active": "")" asp-area="" asp-controller="EUProjectManager" asp-action="Steps">Етапи проектів</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(path == "/EUProjectManager/Report" ? "active": "")" asp-area="" asp-controller="EUProjectManager" asp-action="Report">Звіт</a>
                            </li>
                            <li>
                                <div class="dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDarkDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <img src="../img/UserPhoto/John1.jpg" class="img-thumbnail" alt="..." width="25" height="60">
                                </a>
                                <ul class="dropdown-menu navbar-custom dropdown-menu-end" aria-labelledby="navbarDarkDropdownMenuLink">
                                    <li class="nav-item">
                                <a class="nav-link @(path == "/EUProjectManager/Info" ? "active": "")" asp-area="" asp-controller="EUProjectManager" asp-action="Info">Власні дані</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link @(path == "/EUProjectManager/Authorize" ? "active": "")" asp-area="" asp-controller="Home" asp-action="Authorize">Вихід</a>
                                    </li>
                                </ul>
                                </div>
                            </li>      
                        </ul>
                    </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - ReportingSystem - <a asp-area="" asp-controller="EUProjectManager" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/vue@2.7.8/dist/vue.js"></script>
    <script src="https://unpkg.com/axios@1.1.2/dist/axios.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

<style>
    .nav-link.active {
        text-decoration: underline;
    }
    .navbar-custom{
        background-color: #5677B8;
    }
    .navbar-nav li a {
        color: #fff;
        transition: all 0.3s ease-out;
    }
    .navbar-brand{
        color: #fff;
        transition: all 0.3s ease-out;
    }

    .navbar-brand:hover {
        color: #000;
        transition: all 0.3s ease-in;
    }
    .navbar-nav .nav-link:hover {
        color: #000;
        transition: all 0.3s ease-in;
    }
</style>

