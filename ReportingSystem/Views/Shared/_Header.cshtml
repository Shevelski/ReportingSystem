@{
    var path = Context.Request.Path;
}


<header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand main-name @(path == "/" ? "active": "")" asp-area="" asp-controller="Home" asp-action="Index">Звітна система</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav flex-grow-1 justify-content-end custom-header">
                    
                    @if (User.Identity != null && User.Identity.IsAuthenticated)
                    {
                    <li class="nav-item">
                        <a class="nav-link  @(path == "/Home/Authorize" ? "active": "")" asp-area="" asp-controller="Home" asp-action="Admin">Admin</a>
                    </li>
                    }
                    else
                    {
                    <li class="nav-item">
                        <a class="nav-link  @(path == "/Home/LogIn" ? "active": "")" asp-area="" asp-controller="Home" asp-action="LogIn">Вхід</a>
                    </li>
                    }
                    
                    <li class="nav-item">
                        <a class="nav-link  @(path == "/Home/AboutUs" ? "active": "")" asp-area="" asp-controller="Home" asp-action="AboutUs">Про нас</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link  @(path == "/Home/Contacts" ? "active": "")" asp-area="" asp-controller="Home" asp-action="Contacts">Контакти</a>
                    </li>
                    <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        Мова
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                        <li>
                                <a asp-controller="Home" asp-action="ChangeLocalization" asp-route-culture="en-US" class="dropdown-item">
                            <i class="flag-icon flag-icon-gb"></i>En
                        </a>
                        </li>
                        <li>
                                <a asp-controller="Home" asp-action="ChangeLocalization" asp-route-culture="uk-UA" class="dropdown-item">
                            <i class="flag-icon flag-icon-gb"></i>Uk
                            </a>
                        </li>
                    </ul>
                    </li>
                </ul>
                </div>
        </div>
    </nav>
</header>